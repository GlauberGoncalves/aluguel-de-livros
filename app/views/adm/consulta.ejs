<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Cadastrar Novo Livro</title>
    <meta name="author" content="Glauber Gonçalves">
    <!--  bootstrap  -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css" integrity="sha384-/Y6pD6FV/Vv2HJnA6t+vslU6fwYXjCFtcEpHbNJ0lyAFsXTsjBbfaDjzALeQsN6M" crossorigin="anonymous">
    <!-- photon  -->
    <link rel="stylesheet" href="/css/photon.min.css">
    <!-- style  -->
    <link rel="stylesheet" href="/css/style.css">
  </head>

  <body>
    <div class="window">
      <!-- toolbar header -->
      <header class="toolbar toolbar-header">
              <h1 class="title">Sistema de Livros</h1>
              <div class="toolbar-actions">
                <div class="btn-group">
                  <button class="btn btn-default">
                    <span class="icon icon-home"></span>
                  </button>
                  <button class="btn btn-default">
                    <span class="icon icon-folder"></span>
                  </button>
                  <button class="btn btn-default active">
                    <span class="icon icon-cloud"></span>
                  </button>
                  <button class="btn btn-default">
                    <span class="icon icon-popup"></span>
                  </button>
                  <button class="btn btn-default">
                    <span class="icon icon-shuffle"></span>
                  </button>
                </div>
                <button class="btn btn-default">
                  <span class="icon icon-home icon-text"></span>
                  Filters
                </button>
                <button class="btn btn-default btn-dropdown pull-right js-popover-trigger">
                  <span class="icon icon-megaphone"></span>
                </button>
              </div>
            </header>

      <!-- Sidebar do sistema -->
      <div class="window-content">
        <div class="pane-group">
          <div class="pane pane-sm sidebar">
            <nav class="nav-group">
              <h5 class="nav-group-title">Livros</h5>
              <span class="nav-group-item">
                    <a href="/admin/home"><span class="icon icon-home"></span>Home</a>
              </span>
              <span class="nav-group-item">
                    <a href="/admin/alugar"><span class="icon icon-window"></span> Alugar</a>
              </span>
              <span class="nav-group-item active">
                    <a href="/admin/consultar"><span class="icon icon-location"></span> Consultar</a>
              </span>
              <span class="nav-group-item">
                  <a href="/admin/cadastrar"><span class="icon icon-download"></span> Cadastrar</a>
              </span>
              <span class="nav-group-item">
                    <a href="/admin/configuracoes"><span class="icon icon-folder"></span> Configurações</a>
              </span>
              <h5 class="nav-group-title">Usuários</h5>
              <span class="nav-group-item">
                    <a href="/admin/cadastrar_usuario"><span class="icon icon-home"></span>Cadastrar</a>
              </span>
              <span class="nav-group-item">
                    <a href="/admin/consultar_usuarios"><span class="icon icon-home"></span>Consultar</a>
              </span>
            </nav>
          </div>
          <!-- painel principal  -->
          <div class="pane main">
            <p>Listagem de livros</p>
            <table class="table-striped">
              <thead>
                <tr>
                  <th>Código</th>
                  <th>Título</th>
                  <th>Autor</th>
                  <th>Inclusão</th>
                  <th></th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                <% for(var i = 0; i < livros.length; i++){ %>
                  <tr id="<%= livros[i].id_livro    %>">
                    <td><%= livros[i].id_livro      %></td>
                    <td><%= livros[i].titulo        %></td>
                    <td><%= livros[i].autor         %></td>
                    <td><%= livros[i].data_entrada  %></td>
                    <td>
                      <button class="btn btn-primary editar" id="value='<%= i %>" value="<%= livros[i].id_livro %>">
                        Editar
                      </button>
                    </td>
                    <td>
                      <button class="btn btn-negative excluirLivro" value="<%= livros[i].id_livro %>">
                        Excluir
                      </button>
                    </td>
                  </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>

      <header class="toolbar toolbar-header">
        <h1 class="title">Starprog System</h1>
      </header>
  <!-- ================= Javascript links cdn ===========================  -->
  <script src="https://code.jquery.com/jquery-3.2.1.min.js" integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js" integrity="sha384-h0AbiXch4ZDo7tp9hKZ4TsHbi047NrKGLO3SEJAg45jXxnGIfYzk4Si90RDIqNm1" crossorigin="anonymous"></script>
  <script src="/js/main.js" type="text/javascript"></script>
  <script type="text/javascript">
    var livros = <%- JSON.stringify(livros) %>;

    $(".editar").click(function(){
      (livros[$(this).val()]);
    });
  </script>
</body>
</html>
